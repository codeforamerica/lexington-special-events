  <div class="row">
    <div class="large-8 columns search-results-container">
      <ul class="no-bullet">
        <% @events.each do |event| %>
          <div class="row search-result">
            <div class="large-4 columns">
              <img src="http://recodetech.files.wordpress.com/2014/05/trojan-horse-2011ronshutterstock.png?w=256&h=256&crop=1"  height="100px" />
            </div>
            <div class="large-8 columns">
              <li>
                <h4><a href=""><%= event.name %></a></h4>
                <p><%= event.starts_on.strftime("%A, %B #{event.starts_on.day.ordinalize}") %></p>
                <p><%= event.location %></p>
              </li>
            </div>
          </div>
        <% end %>
      </ul>
    </div>
    <div class="large-4 columns">
      <table>
        <thead>
          <tr>
            <th width="300">Date</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><a>All</a> (39)</td> <!-- display number count so users won't click on empty categories -->
          </tr>
          <tr>
            <td><a>This month</a> (10)</td>
          </tr>
          <tr>
            <td><a>Next month</a> (23)</td>
          </tr>
          <tr>
            <td><a>Select a month</a></td>
          </tr>
        </tbody>
      </table>
      <table>
        <thead>
          <tr>
            <th width="300">Location</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><a>All of Lexington</a> (39)</td>
          </tr>
          <tr>
            <td><a>Downtown</a> (14)</td>
          </tr>
          <tr>
            <td><a>Select a neighborhood</a></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
